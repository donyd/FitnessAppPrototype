<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.unscripted.www.fitnessappprototype.MainActivity">

    <TextView
        android:id="@+id/myAwesomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOOSE LEVEL"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/arms"
        android:id="@+id/imageButton3"
        android:layout_below="@+id/imageButton4"
        android:layout_alignStart="@+id/imageButton4"
        android:layout_marginTop="11dp"
        android:background="@drawable/border"/>

    <ToggleButton
        android:text="@string/togglebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleBeginner"
        android:textOn="@string/beginner"
        android:textOff="Beginner"
        android:background="@drawable/my_btn_toggle"
        android:layout_alignBaseline="@+id/toggleNovice"
        android:layout_alignBottom="@+id/toggleNovice"
        android:layout_toStartOf="@+id/myAwesomeTextView" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/toggleBeginner"
        android:layout_marginTop="80dp"
        android:layout_toStartOf="@+id/toggleNovice"
        app:srcCompat="@drawable/abs"
        android:background="@drawable/border" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/back"
        android:id="@+id/imageButton"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_toEndOf="@+id/toggleNovice"
        android:background="@drawable/border"/>

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/legs"
        android:id="@+id/imageButton5"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_alignStart="@+id/imageButton"
        android:background="@drawable/border"/>

    <TextView
        android:text="CHOOSE BODY PART"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/textView4"
        android:layout_below="@+id/toggleBeginner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

    <ToggleButton
        android:text="@string/togglebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleNovice"
        android:textOn="@string/novice"
        android:textOff="Novice"
        android:background="@drawable/my_btn_toggle"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/myAwesomeTextView"
        android:layout_centerHorizontal="true" />

    <ToggleButton
        android:text="@string/togglebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleAdvanced"
        android:textOn="@string/advanced"
        android:textOff="Advanced"
        android:background="@drawable/my_btn_toggle"
        android:layout_alignBaseline="@+id/toggleNovice"
        android:layout_alignBottom="@+id/toggleNovice"
        android:layout_toEndOf="@+id/myAwesomeTextView" />

    <Button
        android:text="@string/home"
        android:layout_width="130sp"
        android:layout_height="60sp"
        android:id="@+id/button1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/workout"
        android:layout_width="130sp"
        android:layout_height="60sp"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/profile"
        android:layout_width="130sp"
        android:layout_height="60sp"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
