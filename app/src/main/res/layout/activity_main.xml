<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.unscripted.www.fitnessappprototype.MainActivity">

    <Button
        android:text="@string/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ToggleButton
        android:text="@string/togglebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/toggleBeginner"
        android:textOn="@string/beginner"
        android:textOff=""
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/button"
        android:layout_marginEnd="17dp" />

    <ToggleButton
        android:text="@string/togglebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleNovice"
        android:textOn="@string/novice"
        android:textOff=""
        android:layout_alignBaseline="@+id/toggleBeginner"
        android:layout_alignBottom="@+id/toggleBeginner"
        android:layout_alignStart="@+id/button" />

    <ToggleButton
        android:text="@string/togglebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleAdvanced"
        android:textOn="@string/advanced"
        android:textOff=""
        android:layout_marginStart="15dp"
        android:layout_alignBaseline="@+id/toggleNovice"
        android:layout_alignBottom="@+id/toggleNovice"
        android:layout_toEndOf="@+id/toggleNovice" />

</RelativeLayout>
