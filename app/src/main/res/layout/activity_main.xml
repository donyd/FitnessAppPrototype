<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.unscripted.www.fitnessappprototype.MainActivity">

    <TextView
        android:id="@+id/myAwesomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOOSE LEVEL"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtVwBodyPart"
        android:text="CHOOSE BODY PART"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/toggleBeginner"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imgBtnArms"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/arms_kari"
        android:background="@drawable/border"
        android:layout_below="@+id/imgBtnAbs"
        android:layout_alignStart="@+id/imgBtnAbs" />

    <ImageButton
        android:id="@+id/imgBtnAbs"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/abs_kar"
        android:background="@drawable/border"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="17dp"
        android:layout_below="@+id/txtVwBodyPart"
        android:layout_alignStart="@+id/toggleBeginner" />

    <ImageButton
        android:id="@+id/imgBtnBack"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/back_kari"
        android:background="@drawable/border"
        android:layout_below="@+id/txtVwBodyPart"
        android:layout_toEndOf="@+id/imgBtnArms" />

    <ImageButton
        android:id="@+id/imgBtnLegs"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/legs_kari"
        android:background="@drawable/border"
        android:layout_below="@+id/imgBtnAbs"
        android:layout_toEndOf="@+id/imgBtnArms" />

    <ToggleButton
        android:id="@+id/toggleBeginner"
        android:text="@string/togglebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="@string/beginner"
        android:textOff="Beginner"
        android:layout_alignBaseline="@+id/toggleNovice"
        android:layout_alignBottom="@+id/toggleNovice"
        android:layout_toStartOf="@+id/myAwesomeTextView" />

    <ToggleButton
        android:text="@string/togglebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleNovice"
        android:textOn="@string/novice"
        android:textOff="Novice"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/myAwesomeTextView"
        android:layout_centerHorizontal="true" />

    <ToggleButton
        android:text="@string/togglebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleAdvanced"
        android:textOn="@string/advanced"
        android:textOff="Advanced"
        android:layout_alignBaseline="@+id/toggleNovice"
        android:layout_alignBottom="@+id/toggleNovice"
        android:layout_toEndOf="@+id/myAwesomeTextView" />

    <Button
        android:text="@string/home"
        android:layout_width="130sp"
        android:layout_height="60sp"
        android:id="@+id/button1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/workout"
        android:layout_width="130sp"
        android:layout_height="60sp"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/profile"
        android:layout_width="130sp"
        android:layout_height="60sp"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
